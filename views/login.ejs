<%- include('partials/header') -%>

<main class="container">
  <div class="row justify-content-center">
    <section class="col-6 mt-5">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST" class="loginForm">
        <h1 class="cardTitle">login</h1>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fs-3 fw-bold"
            >Email address</label
          >
          <input
            type="email"
            class="form-control height"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label fs-3 fw-bold"
            >Password</label
          >
          <input
            type="password"
            class="form-control height"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btnD fs-4">Submit</button>
        </div>
      </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
